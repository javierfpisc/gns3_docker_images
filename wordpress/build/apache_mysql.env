#Lista de paquetes
PACKS="vim curl iputils-ping net-tools dnsutils nano wget procps git apache2 php php-mysql php-curl php-gd php-mbstring php-xml php-xmlrpc php-soap php-intl php-zip"

#Variables WORDPRESS
#Ãšltima: WPVERSION=latest.tar.gz, otras: https://wordpress.org/download/releases/
WPVERSION=latest.tar.gz
WPDB="wordpress_db"
WPUSER="wordpress_user"
WPPASS="abc123."

#Comandos a ejecutar al crear la imagen separados por ","
COMMANDS="export DEBIAN_FRONTEND=noninteractive,apt install -y mariadb-server mariadb-client,sed -i 's/127.0.0.1/0.0.0.0/' /etc/mysql/mariadb.conf.d/50-server.cnf,service mysql start,echo \"CREATE DATABASE $WPDB\" | mysql -u root, echo \"GRANT ALL ON $WPDB.* TO '$WPUSER'@'%' IDENTIFIED BY '$WPPASS';\" | mysql -u root,cd /tmp && wget https://wordpress.org/$WPVERSION && tar -xzf $WPVERSION && mv wordpress /var/www/html,chown -R www-data:www-data /var/www/html/wordpress"

