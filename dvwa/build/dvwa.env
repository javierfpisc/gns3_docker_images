#Lista de paquetes
PACKS="vim curl iputils-ping net-tools dnsutils nano wget procps git apache2 php libapache2-mod-php php-mysql php-gd"

#Variables
DB=dvwa
DBUSER=dvwauser
DBPASS=abc123.

#Vaciamos tabla de enrutamiento, creamos rutas en el archivo /etc/routes, instalamos DVWA (Damn Vulnerable Web Application)
COMMANDS="DEBIAN_FRONTEND=noninteractive apt install -y iptables-persistent mariadb-server mariadb-client,rm /var/www/html/index.html,git clone https://github.com/ethicalhack3r/DVWA /var/www/html/,chown -R www-data:www-data /var/www/html,service mariadb start,echo \"CREATE DATABASE $DB\" | mysql -u root,echo \"GRANT ALL ON $DB.* TO '$DBUSER'@'localhost' IDENTIFIED BY '$DBPASS'\" | mysql -u root,cp /var/www/html/config/config.inc.php.dist /var/www/html/config/config.inc.php,sed -i \"s/$_DVWA\[ 'db_user' \]     = 'dvwa'/$_DVWA\[ 'db_user' \]     = '$DBUSER'/\" /var/www/html/config/config.inc.php,sed -i \"s/$_DVWA\[ 'db_password' \] = 'p@ssw0rd'/$_DVWA\[ 'db_password' \] = '$DBPASS'/\" /var/www/html/config/config.inc.php,sed -i \"s/$_DVWA\[ 'default_security_level' \] = 'impossible'/$_DVWA\[ 'default_security_level' \] = 'low'/\" /var/www/html/config/config.inc.php,sed -i 's/allow_url_include = Off/allow_url_include = On/' /etc/php/7.4/apache2/php.ini"

